  <div class="container text-body writingbigbig">
    <h1 class="text-center"> Créer un événement </h1> </br></br>
    <%= form_with(model: event, local: true) do |form| %>
      <% if event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %></br>


      <div class="field">
        <%= form.label :name %>
        <div class="text-body">
          <%= form.text_field :name, placeholder: "Cours de Slackline débutant" %>
        </div>
      </div></br>

      <div class="field">
        <%= form.label :discipline %> <p class="d-inline text-danger"> (Ne pas sélectionner les cases qui ont la forme</p> <p class="d-inline text-secondary"> ===MAJUSCULE=== </p><p class="d-inline text-danger">. Elles servent de repère)</p>
        <div class="text-body">
          <%= form.select :discipline, [['===SPORTS DE GLISSE===', {class: 'writingbigbig text-secondary'}], 'Sports de glisse', ['---Roller---', {class: 'writingbigbig text-secondary'}], 'Roller', 'Roller Fitness Ballade', 'Roller Slalom', 'Roller Quad', 'Roller Vitesse','Roller Agressif', 'Roller Agressif Skatepark', 'Roller Agressif Street', ['---Board---', {class: 'writingbigbig text-secondary'}], 'Board', 'Skateboard', 'Longboard', 'Trotinette', ['---Vélo---', {class: 'writingbigbig text-secondary'}], 'Vélo', 'Vélo Fixi', 'Vélo Vitesse', 'Vélo BMX', 'Parkour', 'Slackline', 'Cirque', 'Monocycle', 'Roue Cyr', 'Workout', 'Pilat', 'Yoga', 'Hip-Hop', 'Capoeira', 'Danse Latine', 'Foot urbain', 'Golf urbain', 'Streetball', 'Graff'], :size => 7, :include_blank => true %>
        </div>
      </div></br>


      
      







      <div class="field">
        <%= form.label :description %>
        <div class="text-body">
          <%= form.text_field :description %>
        </div>
      </div></br>

      <div class="field">
        <%= form.label :ville %>
        <div class="text-body">
          <%= form.text_field :ville %>
        </div>
      </div></br>

      <div class="field">
        <%= form.label :price %>
        <p> Prix min conseillé pour que levent soit attractif pour les professeurs : 3€ <p>
        <p> Prix max conseillé pour que levent soit attractif pour les élèves : 5€ <p>
        <div class="text-body">
          <%= form.text_field :price %><p>€</p>
        </div>
      </div></br>

      <div class="field">
        <%= form.label :date %>
        <div class="text-body">
          <%= form.datetime_select :date %>
        </div>
      </div></br>


      <div class="actions text-body">
        <%= form.submit %>
      </div></br>
    <% end %>

  </div>
